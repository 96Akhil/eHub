<section class="h-100 gradient-custom">
    <div class="container py-5">
        <div>
            <span style="color: red;"><strong>{{returnMessage}}</strong></span>
            
        </div>
        <div class="row d-flex justify-content-center my-4">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Order Details</h5>
                    </div>

                    <div class="card-body">
                        <!-- Single item -->
                        {{#each productData}}
                        <div class="row">
                            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                                <!-- Image -->
                                <div class="bg-image hover-overlay hover-zoom ripple rounded"
                                    data-mdb-ripple-color="light">
                                    <img src="/product-image/{{this.image}}" class="w-100" alt="Blue Jeans Jacket" />
                                    <a href="#!">
                                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                                    </a>
                                </div>
                                <!-- Image -->
                            </div>

                            <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                                <!-- Data -->
                                <p><strong> {{this.name}} </strong></p>
                                <p> {{this.description}} </p>

                                <a href="/returnProduct/{{this._id}}"><button type="button"
                                        class="btn btn-primary btn-sm btn-block">
                                        Return Product</button></a>

                            </div>

                            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                                <!-- Quantity -->
                                <div class="d-flex mb-4" style="max-width: 300px">


                                    <div class="form-outline">
                                        {{!-- <input id="form1" min="0" name="quantity" value="{{this.quantity}}"
                                            type="number" class="form-control" style="text-align:center;" /> --}}
                                        <label class="form-label" for="form1"
                                            style="display:flex; justify-content:center;"><strong>Quantity</strong>
                                        </label>
                                        <label class="form-label" for="form1"
                                            style="display:flex; justify-content:center;"> {{this.quantity}}
                                        </label>
                                    </div>

                                    <div class="form-outline" style="margin-left: 4rem;">
                                        {{!-- <input id="form1" min="0" name="quantity" value="{{this.quantity}}"
                                            type="number" class="form-control" style="text-align:center;" /> --}}
                                        <label class="form-label" for="form1"
                                            style="display:flex; justify-content:center;"><strong>Price</strong>
                                        </label>
                                        <label class="form-label" for="form1"
                                            style="display:flex; justify-content:center;"> ₹{{this.price}}/-
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>

                        {{/each}}

                        <!-- Single item -->

                        <hr class="my-4" />

                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p><strong>Delivery Address: <span style="color: rgb(36, 36, 206);">
                                    {{orderDetails.address}},{{orderDetails.city}},{{orderDetails.state}},{{orderDetails.zip}},{{orderDetails.country}}</span>
                            </strong></p>
                        <p><strong></strong></p>
                        <p><strong>Order Date: <span style="color: rgb(36, 36, 206);">{{orderDetails.createdAt}}</span>
                            </strong></p>
                        <p><strong></strong></p>
                        <p><strong></strong></p>
                        {{!-- <p class="mb-0">31.12.2022 - 01.01.2023</p> --}}
                    </div>
                </div>

            </div>
            <div class="col-md-4">

                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Discount</h5>
                    </div>
                    <div class="card-body">
                        <p>{{useMessage}}</p>
                        <p><strong>Applied Discount:</strong><strong><span style="color: rgb(36, 36, 206);">
                                    {{orderDetails.offer}}</span> </strong></p>

                    </div>
                </div>


                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h5 class="mb-0">Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Total amount:</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT)</p>
                                    </strong>
                                </div>
                                <span
                                    style="color: rgb(36, 36, 206);"><strong>₹{{orderDetails.amount}}/-</strong></span>
                            </li>

                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Payment Mode:</strong>

                                </div>
                                <span style="color: rgb(36, 36, 206);"><strong>{{orderDetails.payment}}</strong></span>
                            </li>
                            <li
                                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>Order Status:</strong>

                                </div>
                                <span style="color: rgb(36, 36, 206);"><strong>{{orderDetails.status}}</strong></span>
                            </li>
                        </ul>

                        {{!-- {{#if orderDetails.isAttempted}}
                        <a href="/cancelOrder"> <button type="button" class="btn btn-primary btn-sm btn-block">
                                Cancel Order
                            </button></a>
                        {{else}}

                        {{/if}} --}}


                        {{!-- <a href="/returnOrder"> <button type="button" class="btn btn-primary btn-sm btn-block">
                                Return Order
                            </button></a>
                        {{else}}

                        {{/if}} --}}

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>