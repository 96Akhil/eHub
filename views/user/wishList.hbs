{{#if userList}}
<section class="h-100">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-warning" style="background-color: white; border-radius: 2px; width:7rem;" ><strong>Wishlist</strong>
            </h3>

        </div>
        {{#each userList}}
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <img
                  src="/product-image/{{this.image}}"
                  class="img-fluid rounded-3" alt="Cotton T-shirt">
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2">{{this.name}}</p>
                <p><span class="text-muted">Type:</span>{{this.description}} </p>
              </div>
               <div class="col-md-3 col-lg-3 col-xl-3" style="display:flex; justify-content:center;">
                <h5 class="mb-0">â‚¹{{this.price}}/-</h5>
              </div>
              
              <div class="col-md-3 col-lg-2 col-xl-2" style="display:flex; justify-content:center;">
               <a href="/listToCart/{{this._id}}"><button type="button" class="btn btn-block btn-lg" style="background-color: rgb(228, 140, 41);">Add to Cart</button></a> 
              </div>

              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a href="/ListDelete/{{this._id}}" class="text-danger"><i class="fa fa-trash fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>

        {{/each}}

        <div class="card">
          <div class="card-body">
            <button type="button" class="btn btn-warning btn-block btn-lg">Back to shopping</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
{{else}}

<div class="container mt-5 mb-5" style="display:flex; justify-content:center;">
<img src="/images/No Wishlist.png" alt="">
</div>

{{/if}}