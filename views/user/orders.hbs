

<div class="container mb-5" style="padding-top: 2rem;">
    <div class="col-md-offset-1 col-md-15 mt-4">
        <div class="panel">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-sm-3 col-xs-12">
                        <h4 class="title">Orders </h4>
                    </div>
                    <div class="col-sm-9 col-xs-12 text-right">
                        <div class="btn_group">
                            <input type="text" class="form-control" placeholder="">
                            <button class="btn btn-default" title="Reload">Search</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>OrderId</th>
                            <th>Date</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orderData}}
                        <tr>
                            <td> {{this._id}} </td>
                            <td> {{this.createdAt}} </td>
                            <td> {{this.payment}} </td>
                            <td> {{this.status}} </td>
                            <td>
                                <ul class="action-list">
                                    <li><a href="/viewOrder/{{this._id}}" data-tip="edit"><button type="button" class="btn btn-primary btn-sm">View</button></a></li>
                                    {{#if this.isAttempted}}
                                    <li><a href="/cancelOrder/{{this._id}} " data-tip="delete" onclick="return confirm('Kindly confirm if you want to cancel this order? ')"><button type="button" class="btn btn-danger btn-sm">Cancel</button></a></li>
                                    {{!-- <li><strong>Cancelled</strong></li> --}}
                                    {{else}}
                                    
                                    
                                    {{/if}}
                                </ul>
                            </td>
                        </tr>
                        {{/each}}
                       
                    </tbody>
                </table>
            </div>
            <div class="panel-footer">
                <div class="row">
                    
                   
                </div>
            </div>
        </div>
    </div>
</div>