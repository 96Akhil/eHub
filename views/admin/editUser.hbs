<div class="ex-form-1 pt-5 pb-5">
    <div class="container" style="background:linear-gradient(to right, #bb7d09, #2c3e50); border-radius: 10px;
    border: none;
    box-shadow: 0 0 0 5px rgba(0,0,0,0.05),0 0 0 10px rgba(0,0,0,0.05); ">
        <div class="row">
            <div class="col-xl-6 offset-xl-3">
                <div class="text-box mt-5 mb-5">
                    <h2 style="color: white;">Edit user</h2>

                    <div>
                        <p style="color: purple; font-size:20px;"> {{successmessage}} </p>
                    </div>

                    <!-- Sign Up Form -->
                    <form action="/admin/editProduct/{{editProductData._id}}" enctype="application/x-www-form-urlencoded" method="post">

                        <div class="mb-4 form-floating">
                            <input type="text" name="name" class="form-control" id="floatingInput"
                                placeholder="Username"  value="{{editProductData.name}}">
                            <label for="floatingInput">Name</label>
                        </div>
                        <div class="mb-4 form-floating">
                            <input type="text" name="email" class="form-control" id="floatingInput2"
                                placeholder="User email" required value="{{editProductData.category}}">
                            <label for="floatingInput">Email</label>
                        </div>
                        <div class="mb-4 form-floating">
                            <input type="text" name="mobile" class="form-control" id="floatingPassword"
                                placeholder="Mobile No." required value="{{editProductData.price}}">
                            <label for="floatingPassword">Mobile</label>
                        </div>
                       
                        <label for="submit" id="success"></label>
                        <button type="submit" class="btn btn-warning">Submit</button>
                    </form>
                    <!-- end of sign up form -->

                </div> <!-- end of text-box -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div>